{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "paths": {
      "@charmr/oauth-core": ["../oauth-core/src"]
    }
  },
  "references": [
    { "path": "../oauth-core" }
  ],
  "include": [
    "src", "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}